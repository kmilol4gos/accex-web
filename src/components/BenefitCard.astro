---
export interface Props {
  title: string;
  text: string;
  imageUrl: string;
}

const { title, text, imageUrl } = Astro.props;
---

<article
  class="bg-white rounded-2xl shadow-card w-[352px] h-[411px] flex flex-col gap-10 justify-center items-center text-center px-3 py-6"
>
  <h2 class="font-semibold text-3xl text-[#08295C]">
    {title}
  </h2>
  <p>{text}</p>

  <img src={imageUrl} alt="Imagen representativa" class="w-64" />
</article>
