---
export interface Props {
  title: string;
  text: string;
  imageUrl: string;
}

const {title, text, imageUrl} = Astro.props;
---

<article
  class="relative bg-white rounded-2xl shadow-card w-[263px] h-[266px] flex flex-col gap-10 justify-center items-center text-center px-3 py-6">
  <img src={imageUrl} alt="Imagen representativa" class="absolute mb-64 w-[85px]" />
  <h3 class="font-semibold text-lg text-[#08295C]">{title}</h3>
  <p class="text-center font-normal">{text}</p>
</article>
